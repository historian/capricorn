#!/usr/bin/env ruby
begin
  require File.dirname(__FILE__)+'/../lib/shuttle'
rescue LoadError
  require 'rubygems'
  require 'shuttle'
end

module Shuttle
  BIN_PATH = File.expand_path($PROGRAM_NAME)
  ORIGINAL_ARGV = ARGV.dup
end

Shuttle::App
Shuttle::AppRunner

Shuttle::AppRunner.namespace = 'shuttle:app'
Shuttle::AppRunner.start